        function checkGeolocationPermission() {
            if (!navigator.geolocation) {
                alert('Geolocation is not supported by your browser');
                initializeWithoutGeolocation();
                return;
            }

            navigator.permissions.query({ name: 'geolocation' }).then((result) => {
                if (result.state === 'granted') {
                    hasGeoPermission = true;
                    startGeolocationWatch();
                } else if (result.state === 'prompt') {
                    startGeolocationWatch();
                } else {
                    alert('Geolocation permission denied. Please enable location access in your browser settings.');
                    initializeWithoutGeolocation();
                }
            });
        }

        function startGeolocationWatch() {
            navigator.geolocation.watchPosition(
                (position) => {
                    hasGeoPermission = true;
                    const { latitude, longitude } = position.coords;
                    map.setView([latitude, longitude], 15);
                    map.invalidateSize();

                    if (userMarker) {
                        userMarker.setLatLng([latitude, longitude]);
                    } else {
                        userMarker = L.marker([latitude, longitude], { icon: userIcon })
                            .addTo(map)
                            .bindPopup('You are here');
                    }

                    if (allBuses.length > 0 && initialBusStops.length > 0) {
                        const nearest = findNearestLocations(latitude, longitude, allBuses, initialBusStops);
                        updateNearestDisplay(nearest.nearestStop, nearest.nearestBuses, nearest.nearbyStops);
                    }

                    updateBusMarkers(allBuses, initialBusStops);
                    updateBusStopMarkers(initialBusStops);
                },
                (error) => {
                    console.error('Geolocation error:', error);
                    if (error.code === error.PERMISSION_DENIED) {
                        hasGeoPermission = false;
                        alert('Geolocation permission denied. Please enable location access to use location features.');
                        initializeWithoutGeolocation();
                    }
                },
                { enableHighAccuracy: true, timeout: 7000, maximumAge: 0 }
            );
        }

        function initializeWithoutGeolocation() {
            map.setView([28.6139, 77.2090], 12);
            map.invalidateSize();
            updateBusMarkers(initialBuses, initialBusStops);
            updateBusStopMarkers(initialBusStops);
            document.querySelector('#locationContent .data').innerHTML = `
                <h3>Location unavailable</h3>
                <p>Please enable geolocation to see nearest stops and buses</p>
            `;
            document.getElementById('nearest-stop').innerHTML = 'Nearest Stop: <b>Location unavailable</b>';
            document.getElementById('bus-arriving').innerHTML = 'Bus Arriving: <b>Location unavailable</b>';
        }

        function goToUserLocation() {
            if (hasGeoPermission && userMarker) {
                const userLatLng = userMarker.getLatLng();
                map.setView([userLatLng.lat, userLatLng.lng], 15);
                filterContent('location');
            } else {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        hasGeoPermission = true;
                        const { latitude, longitude } = position.coords;
                        map.setView([latitude, longitude], 15);
                        if (!userMarker) {
                            userMarker = L.marker([latitude, longitude], { icon: userIcon })
                                .addTo(map)
                                .bindPopup('You are here');
                        } else {
                            userMarker.setLatLng([latitude, longitude]);
                        }
                        filterContent('location');
                    },
                    (error) => {
                        alert('Unable to access location. Please ensure geolocation is enabled.');
                        console.error('Geolocation error:', error);
                    },
                    { enableHighAccuracy: true, timeout: 7000, maximumAge: 0 }
                );
            }
        }

        const socket = io();
        socket.on('busUpdate', (data) => {
            updateBusMarkers(data.buses, data.busStops || initialBusStops);
            updateBusStopMarkers(data.busStops || []);
            
            if (userMarker && hasGeoPermission) {
                const userLatLng = userMarker.getLatLng();
                const nearest = findNearestLocations(userLatLng.lat, userLatLng.lng, data.buses, data.busStops || initialBusStops);
                updateNearestDisplay(nearest.nearestStop, nearest.nearestBuses, nearest.nearbyStops);
            }
        });

        // Send zoom level to server on zoom change
        map.on('zoomend', () => {
            const zoomLevel = map.getZoom();
            socket.emit('zoomLevel', zoomLevel);
            updateBusMarkers(allBuses, initialBusStops);
            updateBusStopMarkers(initialBusStops);
        });

        map.on('moveend', () => {
            updateBusMarkers(allBuses, initialBusStops);
            updateBusStopMarkers(initialBusStops);
        });

        window.addEventListener('resize', adjustMapHeight);

        updateBusMarkers(initialBuses, initialBusStops);
        updateBusStopMarkers(initialBusStops);
        if (document.getElementById('analysisPage').classList.contains('active')) drawHistogram();

        // Send initial zoom level
        socket.emit('zoomLevel', map.getZoom());
    </script>
